<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/tv_movieName"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:foregroundGravity="center"
        android:gravity="center|clip_vertical|center_horizontal"
        android:lines="2"
        android:text="Movie Name"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_moviePoster" />

    <ImageView
        android:id="@+id/iv_moviePoster"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_margin="5dp"
        android:contentDescription="movie poster"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_image"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_productionDate"
        android:layout_width="159dp"
        android:layout_height="20dp"
        android:gravity="center|clip_vertical|center_horizontal"
        android:text="Production Date"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movieName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0.0"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>